<!-- Entry field component -->
<div class="relative w-64" id="<%= id %>Div">
    <input
            type="<%= type %>"
            name="<%= name %>"
            id="<%= id %>"
            class="font-montserrat text-almost-white text-base bg-action-grey h-9 w-64 p-2 focus:outline-none focus:ring-0"
            <% if (typeof required !== 'undefined') { %>
                required
            <% } %>
    />
    <div class="absolute bottom-0 left-0 w-full h-0.75 bg-turquoise opacity-50"></div>
    <div id="<%= id %>-line-entry" class="absolute bottom-0 left-0 w-0 h-0.75 bg-turquoise transition-all ease-out duration-300"></div>
</div>

<script>
    $(document).on('focus', 'input', function() {
        const line = document.getElementById(`${this.id}-line-entry`);
        line.style.width = '100%';
    });

    $(document).on('blur', 'input', function() {
        const line = document.getElementById(`${this.id}-line-entry`);
        line.style.width = '0%';
    });
</script>




