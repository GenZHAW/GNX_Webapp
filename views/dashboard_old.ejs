<!-- DASHBOARD SNIPPET LOADING -->
<script>

    //Array with all available pages
    const pages = [
        {id: "home", url: "/dashboard/home", css: "/css/dashboard/home.css"},
        {id: "settings", url: "/dashboard/settings", css: "/css/dashboard/settings.css"},
        {id: "calendar", url: "/dashboard/calendar", css: "/css/dashboard/calendar.css"},
        {id: "fileshare", url: "/dashboard/fileshare", css: "/css/dashboard/fileshare.css"},
        {id: "usermanagement", url: "/dashboard/usermanagement", css: "/css/dashboard/usermanagement.css"},
        {id: "teammanagement", url: "dashboard/teammanagement", css: "/css/dashboard/teammanagement.css"},
        {id: "rolemanagement", url: "dashboard/rolemanagement", css: "/css/dashboard/rolemanagement.css"},
        {id: "championpool", url: "dashboard/championpool", css: "/css/dashboard/championpool.css"},
        {id: "apexstats", url: "dashboard/apexstats", css: "../css/dashboard/apexstats.css"},
        {id: "changelog", url: "dashboard/changelog", css: "../css/dashboard/changelog.css"},
        {id: "eventCalendar", url: "dashboard/eventCalendar", css: "../css/dashboard/eventcalendar.css"},
        {id: "trainingNotes", url: "dashboard/trainingNotes", css: "../css/dashboard/trainingnotes.css"}
    ];

    async function checkSessionStatus() {
        try {
            const response = await $.get('/session-status');
            return response.isAuthenticated;
        } catch (error) {
            console.error('Error checking session status:', error);
            return false;
        }
    }

    $(document).ready(function () {
        loadPage("home", pages);

        $(function () {
            pages.forEach(page => {
                $('#' + page.id).click(async function (e) {
                    e.preventDefault();
                    const isAuthenticated = await checkSessionStatus();
                    if (!isAuthenticated) {
                        window.location.href = '/?type=error&message=Session expired, please login again';
                    }else{
                        await loadPage(page.id, pages);
                    }
                });
            });
        });
    });
</script>

<!-- NAVBAR SCRIPTS -->
<script>
    let sidebar = document.querySelector(".sidebar");
    let closeBtn = document.querySelector("#btn");
    let searchBtn = document.querySelector(".bx-search");
    closeBtn.addEventListener("click", () => {
        sidebar.classList.toggle("open");
        menuBtnChange();
    });

    function menuBtnChange() {
        if (sidebar.classList.contains("open")) {
            closeBtn.classList.replace("bx-menu", "bx-menu-alt-right");
        } else {
            closeBtn.classList.replace("bx-menu-alt-right", "bx-menu");
        }
    }
</script>
