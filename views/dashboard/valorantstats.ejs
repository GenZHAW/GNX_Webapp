<script src="/js/clientJS/valorantStats.js"></script>

<div class="bg-grey-level1 pr-4 px-4 md:px-8 py-6">

    <div class="flex sm:flex-row flex-col sm:justify-between sm:items-center mb-5">
        <h3 class="text-2xl font-bold font-orbitron text-white">Valorant Statistics</h3>
        <div class="flex items-center mt-4 sm:mt-0 gap-4">
            <p class="font-montserrat text-almost-white text-lg font-semibold hidden sm:block">Timeperiod</p>
            <%- include('../components/dropdown', {id: 'timeInterval', options: [{value: 2, text: "Last 48hrs"}, {value: 7, text: "Last 7 days"}, {value: 14, text: "Last 14 days"}, {value: 30, text: "Last Month"}], width: 'w-48'}) %>
            <%- include('../components/buttondefault', {type: 'button', id: 'addPlayer', text: '', icon: 'ri-user-add-line', btnType: 'Success'}) %>
        </div>
    </div>

    <div id="invalidRiotId" class="hidden">
        <p class="font-montserrat font-bold text-xl md:text-2xl text-error text-center">Your Riot-ID seems to be invalid!</p>
        <div class="flex justify-center items-center mt-4">
        <span class="font-montserrat text-center">In order to access this page you need to set a valid Riot-ID in your
        <a class="font-montserrat text-turquoise hover:underline hover:cursor-pointer font-bold" id="openSettings">Settings</a>
        </span>
        </div>
    </div>

    <div id="validRiotId" class="hidden">
        <div class="flex flex-wrap gap-4" id="playerCardContainer">
        </div>
    </div>

    <div id="loading" class="flex justify-center items-center mt-64">
        <img src="/res/others/loading_animation.gif" alt="loading animation" class="w-24"/>
    </div>
</div>
<div class="popup-container" id="popupContainerAddPlayer"></div>
<script>
    $(document).ready(function () {
        const data = {
            id: '<%= user.id %>',
            riotId: '<%= user.riotgames %>'
        }
        initPage(data.id, data.riotId);
    });
</script>