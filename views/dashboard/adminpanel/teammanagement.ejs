<script src="/js/clientJS/adminpanel/teammanagement.js"></script>

<div class="bg-grey-level1 xl:pr-4 pr-4 px-4 md:px-8 py-6">
    <div class="w-full md:flex md:justify-between items-center">
        <h3 class="text-2xl mb-5 font-bold font-orbitron text-white">Team / TeamType management</h3>
    </div>

    <!-- Teams Table -->
    <div class="bg-grey-level2 p-3 mt-5">
        <h4 class="text-xl mb-5 font-bold font-orbitron text-white">Team Table</h4>
        <%- include('../../components/buttondefault', {type: 'button', id: 'createTeam', text: 'Create Team', icon: 'ri-file-add-line', btnType: 'Success'}) %>
        <%- include('../../components/table', {
        id: 'teamsTable',
        bodyId: 'teamsData',
        headers: [
        {text: 'Team', width: 'w-full'},
        {text: 'Type', width: 'w-full'},
        {text: 'Manager', width: 'w-full'},
        {text: 'Notification Days', width: 'w-full'},
        {text: 'Actions', width: '100px'}
        ]
        }) %>

        <div class="flex justify-between items-center mt-4">
            <%- include('../../components/buttondefault', {type: 'button', id: 'teamsPrevPage', text: '', icon: 'ri-arrow-left-line'}) %>
            <p class="text-almost-white font-montserrat font-bold" id="teamPageIndicator">Page 1 / 1</p>
            <%- include('../../components/buttondefault', {type: 'button', id: 'teamsNextPage', text: '', icon: 'ri-arrow-right-line'}) %>
        </div>
    </div>

    <!-- DIV For editing a Team -->
    <div class="bg-grey-level2 pl-4 pr-4 pb-4 mt-4 overflow-x-auto hidden" id="teamEdit">
    </div>


    <!-- Teams Type Table -->
    <div class="bg-grey-level2 p-3 mt-5">
        <h4 class="text-xl mb-5 font-bold font-orbitron text-white">TeamType Table</h4>
        <%- include('../../components/buttondefault', {type: 'button', id: 'createTeamType', text: 'Create TeamType', icon: 'ri-file-add-line', btnType: 'Success'}) %>
        <%- include('../../components/table', {
        id: 'teamTypesTable',
        bodyId: 'teamTypesData',
        headers: [
        {text: 'Name', width: 'w-full'},
        {text: 'Display Name', width: 'w-full'},
        {text: 'Actions', width: '100px'}
        ]
        }) %>

        <div class="flex justify-between items-center mt-4">
            <%- include('../../components/buttondefault', {type: 'button', id: 'typePrevPage', text: '', icon: 'ri-arrow-left-line'}) %>
            <p class="text-almost-white font-montserrat font-bold" id="typePageIndicator">Page 1 / 1</p>
            <%- include('../../components/buttondefault', {type: 'button', id: 'typeNextPage', text: '', icon: 'ri-arrow-right-line'}) %>
        </div>
    </div>

    <!-- DIV For editing a TeamType -->
    <div class="bg-grey-level2 pl-4 pr-4 pb-4 mt-4 overflow-x-auto hidden" id="gamedayDetails">
    </div>

</div>


<div id="popup-containerCreateTeam" class="popup-container"></div>
<div id="popup-containerCreateTeamType" class="popup-container"></div>
<script>
    $(document).ready(function() {
        initPage();
    });
</script>