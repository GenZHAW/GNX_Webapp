<script src="/js/clientJS/adminpanel/teammanagement.js"></script>

<div class="bg-grey-level1 xl:pr-4 pr-4 px-4 md:px-8 py-6">
    <div class="w-full md:flex md:justify-between items-center">
        <h3 class="text-2xl font-bold font-orbitron text-white">Team Management</h3>
    </div>

    <!-- Teams Table -->
    <div class="bg-grey-level2 p-3 mt-5">
        <div class="w-full sm:flex sm:justify-between items-center mb-2 sm:mb-4">
            <h4 class="text-xl font-bold font-orbitron text-white mb-4 sm:mb-0">Teams</h4>
            <%- include('../../components/buttondefault', {type: 'button', id: 'createTeam', text: 'Create Team', icon: 'ri-add-circle-line', btnType: 'Success'}) %>
        </div>
        <%- include('../../components/table', {
        id: 'teamsTable',
        bodyId: 'teamsData',
        headers: [
        {text: 'Team', width: 'w-full'},
        {text: 'Type', width: 'w-full', display: 'sm'},
        {text: 'Manager', width: 'w-full', display: 'md'},
        {text: 'Notification Days', width: 'w-full', display: 'xl'},
        {text: 'Actions', width: '100px'}
        ]
        }) %>

        <div class="flex justify-between items-center mt-4">
            <%- include('../../components/buttondefault', {type: 'button', id: 'teamsPrevPage', text: '', icon: 'ri-arrow-left-line'}) %>
            <p class="text-almost-white font-montserrat font-bold" id="teamPageIndicator">Page 1 / 1</p>
            <%- include('../../components/buttondefault', {type: 'button', id: 'teamsNextPage', text: '', icon: 'ri-arrow-right-line'}) %>
        </div>
    </div>

    <!-- Team Types Table -->
    <div class="bg-grey-level2 p-3 mt-5">
        <div class="w-full sm:flex sm:justify-between items-center mb-2 sm:mb-4">
            <h4 class="text-xl font-bold font-orbitron text-white mb-4 sm:mb-0">Team Types</h4>
            <%- include('../../components/buttondefault', {type: 'button', id: 'createTeamType', text: 'Create TeamType', icon: 'ri-add-circle-line', btnType: 'Success'}) %>
        </div>
        <%- include('../../components/table', {
        id: 'teamTypesTable',
        bodyId: 'teamTypesData',
        headers: [
        {text: 'Name', width: 'w-full', display: 'sm'},
        {text: 'Display Name', width: 'w-full'},
        {text: 'Actions', width: '100px'}
        ]
        }) %>

        <div class="flex justify-between items-center mt-4">
            <%- include('../../components/buttondefault', {type: 'button', id: 'typePrevPage', text: '', icon: 'ri-arrow-left-line'}) %>
            <p class="text-almost-white font-montserrat font-bold" id="typePageIndicator">Page 1 / 1</p>
            <%- include('../../components/buttondefault', {type: 'button', id: 'typeNextPage', text: '', icon: 'ri-arrow-right-line'}) %>
        </div>
    </div>

</div>

<div id="popup-containerCreateTeam" class="popup-container"></div>
<div id="popup-containerCreateTeamType" class="popup-container"></div>
<div id="popup-containerTeamDel" class="popup-container"></div>
<div id="popup-containerTeamTypeDel" class="popup-container"></div>
