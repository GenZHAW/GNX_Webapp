<script src="/js/clientJS/adminpanel/gamedayadmin.js"></script>

<div class="bg-grey-level1 xl:pr-4 pr-4 px-4 md:px-8 py-6">

    <h3 class="text-2xl mb-5 font-bold font-orbitron text-white">Gamedays / Results Admin</h3>

    <div class="flex justify-between items-center">
        <h4 class="text-lg sm:text-xl md:text-2xl mb-5 font-bold font-montserrat text-white pt-5" id="currentWeekText"></h4>
        <div class="text-right items-center flex-1 md:justify-end justify-between w-full gap-4 hidden md:flex">
            <%- include('../../components/buttondefault', {type: 'button', id: 'lastWeekBtn', text: 'Last Week', icon: 'ri-arrow-left-s-line', iconPos: 'left'}) %>
            <%- include('../../components/buttondefault', {type: 'button', id: 'todayBtn', text: 'Toady'}) %>
            <%- include('../../components/buttondefault', {type: 'button', id: 'nextWeekBtn', text: 'Next Week', icon: 'ri-arrow-right-s-line'}) %>
        </div>
        <div class="text-right items-center flex-1 justify-end w-full gap-4 flex md:hidden">
            <%- include('../../components/buttondefault', {type: 'button', id: 'lastWeekBtnM', text: 'W', icon: 'ri-arrow-left-s-line', iconPos: 'left'}) %>
            <%- include('../../components/buttondefault', {type: 'button', id: 'todayBtnM', text: 'T'}) %>
            <%- include('../../components/buttondefault', {type: 'button', id: 'nextWeekBtnM', text: 'W', icon: 'ri-arrow-right-s-line'}) %>
        </div>
    </div>
    <div class="bg-grey-level2 p-4">
        <%- include('../../components/table', {id: 'gamedays', bodyId: 'gamedaysData', headers: [{text: 'Date', width: '160px'}, {text: 'Title', width: '15%'}, {text: 'Team', width: '14%'}, {text: 'Result'}, {text: 'Actions', width: '175px'}]}) %>
    </div>

    <!-- DIV FOR DISPLAYING DETAILS -->
    <div class="bg-grey-level2 pl-4 pr-4 pb-4 mt-4 overflow-x-auto hidden" id="gamedayDetails">
    </div>
</div>
<script>
    $(document).ready(function() {
        initPage();

        $('#lastWeekBtn, #lastWeekBtnM').click(function() {
            lastWeek();
        });

        $('#todayBtn, #todayBtnM').click(function() {
            today();
        });

        $('#nextWeekBtn, #nextWeekBtnM').click(function() {
            nextWeek();
        });
    });

</script>